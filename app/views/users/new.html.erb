<%  provide(:title, _('Sign up')) %>

<h1><%= _('Sign up') %></h1>

<div class="row">
  <!--<form class="form-signin" role="form" method="post"> -->
    <div class= "col-md-4 col-md-offset-4">
      <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages' %>
          <div class="input-group-md">
            <%= f.text_field :name , class: 'form-control', autofocus: true,  placeholder: _('Name') %>
	  </div>  
	  <div class="input-group-md">
	    <%= f.text_field :email , class: 'form-control', autofocus: true,  placeholder: _('Email address') %>
	 </div>
	  <div class="input-group-md">
            <%= f.password_field :password , class: 'form-control', autofocus: true,  placeholder: _('Password') %>
	  </div>
	  
	  <div class="input-group-md">
	    <%= f.password_field :password_confirmation , class: 'form-control', autofocus: true,  placeholder: _('Password Confirmation') %>
          </div> 
          <div class="input-group-btn">
	    <%= f.submit _('Create my account'), class: "btn btn-large btn-primary" %>
	 </div>
      <% end %>
      
    </div>
  <!-- </form> -->
</div>
