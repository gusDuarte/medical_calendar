<%  provide(:title, _('Create new Patient')) %>

<div class="row">
    <div class= "col-md-4 col-md-offset-4">
      <%= form_tag :action=>'create' %>
          <h2 class="form-signin-heading"> <%= _('Patient data') %></h2>
	  <%= render 'shared/error_messages', object: @patient %>
	  <div class="input-group-md">
            <%= text_field :patient, :name ,         class: 'form-control', autofocus: true,  placeholder: _('Name') %>
	    <%= text_field :patient, :phone_number,  class: 'form-control', autofocus: true,  placeholder: _('Phone Number') %>
	    <%= text_field :patient, :email,         class: 'form-control', autofocus: true,  placeholder: _('Email Address') %>
	  </div>
       <%= submit_tag _('New Patient'), class: "btn btn-lg btn-primary btn-block" %>
    </div>
</div>
