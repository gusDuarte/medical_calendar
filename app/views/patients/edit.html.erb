<% provide(:title, _('Patient data edit')) %>

<div class="row">
  <div class="button-sections">
    <%= render 'patient_buttons' %>
  </div>
  <script type="text/javascript">
    $("#btn-personal-data").button('toggle');
  </script>
</div>

<div class="row">
<div class="information-container">
    <div class="col-md-4 col-md-offset-4">
      <div class="input-group-md">
	<%= form_tag(patient_path(@patient), method: :patch) do %>
	    <%= label_tag  :name, 'Name' %>
            <%= text_field :patient, :name ,         class: 'form-control', autofocus: true %>
	    	    
	    <%= label_tag  :email, 'Email' %>
	    <%= text_field :patient, :email ,        class: 'form-control', autofocus: true %>

	    <%= label_tag  :phone_number, 'Phone Number' %>
	    <%= text_field :patient, :phone_number,  class: 'form-control', autofocus: true %>
	    <%= submit_tag _('Update'), class: "btn btn-lg btn-primary btn-block" %>   
	  <% end %>
       </div> <!-- input-group-md -->
    </div> <!-- col-md-4 col-md-offset-4 -->
</div> <!-- informattion-container" -->
</div> <!-- row -->
