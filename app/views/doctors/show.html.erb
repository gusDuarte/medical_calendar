<% provide(:title, _('Doctor profile')) %>


<div class="row" id="doctor-button-sections">
  <%= render 'doctor_buttons' %>
  
  <script type="text/javascript">
    $("#btn-personal-data").button('toggle');
  </script>
</div>


<div class="row" id="doctor-information-container">
  <div class= "col-md-4 col-md-offset-4">      
    <div class="input-group-md">	    
	    <%= label_tag  :name, 'Name' %>
            <%= text_field :doctor, :name ,  class: 'form-control', disabled: '' %>
	    
	    <%= label_tag  :speciality, 'Speciality' %>
	    <%= text_field :doctor, :speciality ,   class: 'form-control',  disabled: '' %>
	    
	    <%= label_tag  :email , 'Email' %>
	    <%= text_field :doctor, :email ,        class: 'form-control',  disabled: '' %>
	    
	    <%= label_tag  :phone_number , 'Phone Number' %>
	    <%= text_field :doctor, :phone_number,  class: 'form-control',  disabled: '' %>
    </div>   
    <%= link_to _('Edit'), edit_doctor_path, class: "btn btn-lg btn-primary btn-block", role: "button" %>
  </div>
</div>

