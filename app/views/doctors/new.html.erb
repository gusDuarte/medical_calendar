<%  provide(:title, _('Create new Doctor')) %>

<div class="row">
    <div class= "col-md-4 col-md-offset-4">
      <%= form_tag :action=>'create' %>
          <h2 class="form-signin-heading"> <%= _('Doctor data') %></h2>
	  <%= render 'shared/error_messages', object: @doctor %>
	  <div class="input-group-md">
            <%= text_field :doctor, :name ,         class: 'form-control', autofocus: true,  placeholder: _('Name') %>
	    <%= text_field :doctor, :speciality,    class: 'form-control', autofocus: true,  placeholder: _('Speciality') %>
	    <%= text_field :doctor, :phone_number,  class: 'form-control', autofocus: true,  placeholder: _('Phone Number') %>
	    <%= text_field :doctor, :email,         class: 'form-control', autofocus: true,  placeholder: _('Email Address') %>
	  </div>
       <%= submit_tag _('New Doctor'), class: "btn btn-lg btn-primary btn-block" %>
    </div>
</div>
